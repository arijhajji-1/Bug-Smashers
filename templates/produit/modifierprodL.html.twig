{% extends 'base-back.html.twig' %}

{% block title %}Modifier produit{% endblock %}

{% block body %}

    {{ form_start(form, {'class': 'forms-sample','attr':{'novalidate': 'novalidate'}} ) }}
    {% form_theme form 'bootstrap_4_layout.html.twig' %}
    <div>
        {{ form_errors(form) }}
    </div>
    <div class="form-group">
        <div class="col">
            {{ form_row(form.nom) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col">
            {{ form_row(form.prix) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col">
            {{ form_row(form.marque) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col">
            {{ form_row(form.description) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col">
            {{ form_row(form.etat) }}
        </div>
    </div>
    <div class="form-group" style="padding-left: 3%;">
        <div class="col">
            {{ form_widget(form.dispo) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col">
            {{ form_row(form.category) }}
        </div>
    </div>

    <div class="row">
        {{ form_widget(form.imagePath) }}
    </div>
    {{ form_widget(form) }}
    <br>
    <button class="btn btn-outline-dark btn-fw">{{ button_label|default('Modify') }}</button>
    <a href="{{ path('produit_acheter_affichage_back')  }}" class="btn btn-outline-dark btn-fw" >Back To List</a>
    {{ form_end(form) }}

{% endblock %}