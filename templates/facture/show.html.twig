{% extends 'base-back.html.twig' %}

{% block title %}Facture{% endblock %}

{% block body %}
    <h1>Facture</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ facture.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ facture.DateFact | date('d-m-Y') }}</td>
            </tr>
            <tr>
                <th>remise</th>
                <td>{{ facture.Remise }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ facture.Total }}</td>
            </tr>
            <tr>
                <th>NOMCLIENT</th>
                <td>{{ facture.commande.nom }}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('facture_index') }}" class="btn ">retour au liste
        <i class="bi bi-cart-x"></i>
    </a>

    <a href="{{ path('facture_edit', {'id': facture.id}) }}" class="btn ">Annulation ou rectification de commande
        <i class="bi bi-cart-x"></i>
    </a>

    {{ include('facture/_delete_form.html.twig') }}
{% endblock %}
