{% block body %}
    <h1 align="center">VOTRE FACTURE</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Remise</th>
                <th>Total</th>

            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.id }}</td>
                <td>{{ facture.DateFact | date('d-m-Y') }}</td>
                <td>{{ facture.Remise }}</td>
                <td>{{ facture.Total }}</td>

                
            </tr>
        {% else %}
            <tr>
                <td colspan="18">pas de facture</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
