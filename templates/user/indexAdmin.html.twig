{% extends 'base-back.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>Les Utilisateurs </h1>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Adresse</th>
                <th>Photo</th>
                <th>Telephone</th>
                <th>Cin</th>
                <th>Date_naissance</th>
                <!--<th>Password</th>-->
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            {% if user.roles!=["ROLE_ADMIN"]  %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.adresse }}</td>
                <td><img src="{{ asset('uploads/' ~ user.photo) }}"/></td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.cin }}</td>
                <td>{{ user.dateNaissance ? user.dateNaissance|date('Y-m-d ') : '' }}</td>
                <!--<td>{{ user.password }}</td>-->
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-info">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-success">edit</a>
                    <a href="{{ path('user_delete', {'id': user.id}) }}" class="btn btn-danger">delete</a>
                </td>
            </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
