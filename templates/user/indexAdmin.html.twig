{% extends 'base-back.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Adresse</th>
                <th>Photo</th>
                <th>Telephone</th>
                <th>Cin</th>
                <th>Date_naissance</th>
                <!--<th>Password</th>-->
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.adresse }}</td>
                <td>{{ user.photo }}</td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.cin }}</td>
                <td>{{ user.dateNaissance ? user.dateNaissance|date('Y-m-d ') : '' }}</td>
                <!--<td>{{ user.password }}</td>-->
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
