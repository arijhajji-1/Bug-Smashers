{% extends 'base-back.html.twig' %}
{% block title %}
    <head>
        <title> recherche Reclamations </title>
    </head>
{% endblock %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-warning">
            {{ message }}
        </div>
    {% endfor %}
    <div class="row text-center ">

    </div>

    <div class="card-body">
        <form method="post">
            <input type="text" name="categorie">
            <input type="submit" class="btn btn-primary" value="recherche">
        </form>
        <button><a href="{{ path('stat_reclamation') }}"> statistique</a></button>
        <h1>LISTE RECLAMATIONS</h1>
        <table class="table table-striped">
            <thead>
            <tr>
                <th> categorie</th>
                <th> commande</th>
                <th> sujet</th>
                <th> description</th>
                <th> date</th>
                <th> etat</th>

            </tr>
            </thead>
            </thead>
            <tbody>
            <tr {% for item in reclamation %}>
                <td>{{ item.categorie }} </td>
                <td>{{ item.idCommande }} </td>
                <td>{{ item.sujet }} </td>
                <td>{{ item.description }} </td>
                <td>{{ item.date|date('d-m-Y') }} </td>
                <td>{{ item.statut }} </td>
                <td><button><a href="{{ path('update',{'id':item.idCommande}) }}">   modifier</button>
                    </a></td>
            </tr {% endfor %}>
            </tbody>
        </table>
    </div>
{% endblock %}